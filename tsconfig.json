{
  "compilerOptions": {
    "module": "commonjs",
    "target": "es5",
    "forceConsistentCasingInFileNames": true,
    "listEmittedFiles": true,
    "noEmitOnError": true,
    "locale": "en-US",
    "removeComments": true,
    "sourceMap": true,
    "noImplicitAny": false,
    "noImplicitThis": true,
    "alwaysStrict": true,
    "strictBindCallApply": true,
    "strictNullChecks": false,
    "strictFunctionTypes": true,
    "strictPropertyInitialization": false,
    "esModuleInterop": false,
    "declaration": true,
    "declarationDir": "declarations"
  },
  "exclude": [
    "webpack.base.config.ts",
    "webpack.dist.development.ts",
    "webpack.dist.production.ts",
    "webpack.lib.development.ts",
    "webpack.lib.production.ts"
  ]
}